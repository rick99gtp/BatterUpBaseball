                    android:id="@+id/tvThrows1"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="Throws"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
