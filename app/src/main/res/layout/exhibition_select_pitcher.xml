<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTeamName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="Team Name Rotation"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_alignParentStart="true"
        android:layout_below="@id/tvTeamName"
        android:layout_marginStart="10dp"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="70"
            android:id="@+id/cvLeft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            card_view:cardElevation="8dp"
            card_view:cardCornerRadius="8dp">

            <LinearLayout
                android:weightSum="11"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:weightSum="13"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Throws"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Player Name"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="W-L, ERA"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="vs. Left"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="vs. Right"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llRow1"
                    android:weightSum="13"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:id="@+id/tvThrows1"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="Throws"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvName1"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:text="Player Name"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="W-L, ERA"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvVsLeft1"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="vs. Left"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvVsRight1"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="vs. Right"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llRow2"
                    android:weightSum="13"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:id="@+id/tvThrows2"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="Throws"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvName2"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:text="Player Name"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="W-L, ERA"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvVsLeft2"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="vs. Left"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvVsRight2"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="vs. Right"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llRow3"
                    android:weightSum="13"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:id="@+id/tvThrows3"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="Throws"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvName3"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:text="Player Name"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="W-L, ERA"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvVsLeft3"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="vs. Left"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvVsRight3"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="vs. Right"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llRow4"
                    android:weightSum="13"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:id="@+id/tvThrows4"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="Throws"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvName4"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:text="Player Name"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="W-L, ERA"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvVsLeft4"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="vs. Left"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvVsRight4"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="vs. Right"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llRow5"
                    android:weightSum="13"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:id="@+id/tvThrows5"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="Throws"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvName5"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:text="Player Name"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="W-L, ERA"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvVsLeft5"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="vs. Left"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvVsRight5"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="vs. Right"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                card_view:cardElevation="8dp"
                card_view:cardCornerRadius="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="30"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:weightSum="100"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/ivCard"
                        android:src="@drawable/batter_up_baseball_card"
                        android:layout_width="wrap_content"
                        android:layout_weight="80"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/tvSelectPitcher"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="20"
                        android:background="@android:color/darker_gray"
                        android:gravity="center"
                        android:text="Select Pitcher"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>