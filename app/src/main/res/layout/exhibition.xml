<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/exhibition_bg2">

    <LinearLayout
        android:id="@+id/llCards"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.CardView
            card_view:cardUseCompatPadding="true"
            android:id="@+id/cvVisitor"
            android:layout_weight="1"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="10dp"
            android:layout_width="200dp"
            android:layout_height="250dp"
            card_view:cardElevation="8dp"
            card_view:cardCornerRadius="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:weightSum="9"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    card_view:cardBackgroundColor="#ffff0000"
                    card_view:cardUseCompatPadding="true"
                    android:id="@+id/bgVisitorTeamname"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    card_view:cardElevation="8dp"
                    card_view:cardCornerRadius="15dp">

                    <TextView
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:id="@+id/tvVisitorTeamName"
                        android:text="@string/exhibition_visitor_teamname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:background="@drawable/highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>

                <RelativeLayout
                    android:background="@drawable/border_top"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:textSize="20sp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:layout_alignParentStart="true"
                        android:text="@string/exhibition_batting"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textSize="20sp"
                        android:paddingRight="10dp"
                        android:gravity="center_vertical"
                        android:id="@+id/tvVisitorBattingRating"
                        android:layout_alignParentEnd="true"
                        android:text="000"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/border"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:textSize="20sp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:layout_alignParentStart="true"
                        android:text="@string/exhibition_pitching"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textSize="20sp"
                        android:paddingRight="10dp"
                        android:gravity="center_vertical"
                        android:id="@+id/tvVisitorPitchingRating"
                        android:layout_alignParentEnd="true"
                        android:text="000"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/border_bottom"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:textSize="20sp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:layout_alignParentStart="true"
                        android:text="@string/exhibition_fielding"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textSize="20sp"
                        android:paddingRight="10dp"
                        android:gravity="center_vertical"
                        android:id="@+id/tvVisitorFieldingRating"
                        android:layout_alignParentEnd="true"
                        android:text="000"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            card_view:cardUseCompatPadding="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="40dp"
            android:id="@+id/cvHome"
            android:layout_weight="1"
            android:layout_width="200dp"
            android:layout_height="250dp"
            card_view:cardElevation="8dp"
            card_view:cardCornerRadius="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:weightSum="9"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    card_view:cardBackgroundColor="#ffff0000"
                    card_view:cardUseCompatPadding="true"
                    android:id="@+id/bgHomeTeamname"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                     card_view:cardElevation="8dp"
                    card_view:cardCornerRadius="15dp"
                    >

                    <TextView
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:id="@+id/tvHomeTeamName"
                        android:text="@string/exhibition_home_teamname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:background="@drawable/highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>

                <RelativeLayout
                    android:background="@drawable/border_top"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:textSize="20sp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:layout_alignParentStart="true"
                        android:text="@string/exhibition_batting"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textSize="20sp"
                        android:paddingRight="10dp"
                        android:gravity="center_vertical"
                        android:id="@+id/tvHomeBattingRating"
                        android:layout_alignParentEnd="true"
                        android:text="000"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/border"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:textSize="20sp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:layout_alignParentStart="true"
                        android:text="@string/exhibition_pitching"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textSize="20sp"
                        android:paddingRight="10dp"
                        android:gravity="center_vertical"
                        android:id="@+id/tvHomePitchingRating"
                        android:layout_alignParentEnd="true"
                        android:text="000"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/border_bottom"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:textSize="20sp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:layout_alignParentStart="true"
                        android:text="@string/exhibition_fielding"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textSize="20sp"
                        android:paddingRight="10dp"
                        android:gravity="center_vertical"
                        android:id="@+id/tvHomeFieldingRating"
                        android:layout_alignParentEnd="true"
                        android:text="000"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_above="@id/llCards"
        android:orientation="horizontal"
        android:id="@+id/llVisitorHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold|italic"
            android:textSize="28sp"
            android:gravity="center_horizontal|bottom"
            android:layout_weight="1"
            android:textColor="#ff000000"
            android:text="@string/exhibition_away"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:textStyle="bold|italic"
            android:textSize="28sp"
            android:gravity="center_horizontal|bottom"
            android:layout_weight="1"
            android:textColor="#ff000000"
            android:text="@string/exhibition_home"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_below="@id/llCards"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:layout_above="@id/llCards"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            card_view:cardUseCompatPadding="true"
            android:id="@+id/cvSelectVisitorTeam"
            android:layout_weight="1"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="10dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            card_view:cardElevation="8dp"
            card_view:cardCornerRadius="4dp">

            <TextView
                android:id="@+id/tvSelectVisitorTeam"
                android:gravity="center"
                android:text="Select this team"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            card_view:cardUseCompatPadding="true"
            android:id="@+id/cvSelectHomeTeam"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="40dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            card_view:cardElevation="8dp"
            card_view:cardCornerRadius="4dp">

            <TextView
                android:id="@+id/tvSelectHomeTeam"
                android:gravity="center"
                android:text="Select this team"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>