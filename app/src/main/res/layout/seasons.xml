<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view_1="http://schemas.android.com/tools"
    xmlns:card_view_2="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_centerVertical="true"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <android.support.v7.widget.CardView
            android:layout_marginStart="80dp"
            android:layout_marginEnd="40dp"
            android:id="@+id/card_view_1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            card_view_1:elevation="8dp"
            card_view_1:cardCornerRadius="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvSeasons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/new_season" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginStart="40dp"
            android:layout_marginEnd="80dp"
            android:background="@color/colorPrimary"
            android:id="@+id/card_view_2"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            card_view_2:elevation="2dp"
            card_view_2:cardCornerRadius="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvExhibition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/continue_season" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</RelativeLayout>